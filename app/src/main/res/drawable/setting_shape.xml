<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Large red circle -->
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="@dimen/one_point_three_dp"
                android:color="@color/colorAccent" />
            <size
                android:width="@dimen/thirty_five_dp"
                android:height="@dimen/thirty_five_dp"/>
        </shape>
    </item>

    <!-- Small black circle -->
    <item android:right="0dp"
        android:left="0dp"
        android:top="@dimen/ten_dp"
        android:bottom="@dimen/minus_ten_dp">
        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                android:width="@dimen/thirty_dp"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item android:right="0dp"
        android:left="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                android:width="@dimen/thirty_dp"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item android:right="0dp"
        android:left="0dp"
        android:top="@dimen/minus_ten_dp"
        android:bottom="@dimen/ten_dp">
        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                android:width="@dimen/thirty_dp"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
</layer-list>