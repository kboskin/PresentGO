<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AgeFragment">

    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fifty_dp"
        android:text="@string/what_is_the_age"
        android:textColor="@color/mostlyTextColor"
        android:textSize="@dimen/thirty_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/five_dp"
        android:text="@string/lucky_guy_has_an_age_for_sure"
        android:textColor="@color/mostlyTextColor"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="italic" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age_hint"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/fifty_dp"
        android:columnCount="2"
        android:rowCount="2">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/child_cv"
            android:layout_width="@dimen/one_hundred_dp"
            android:layout_height="@dimen/one_hundred_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            app:cardBackgroundColor="@color/colorTransparent"
            app:cardElevation="0dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/child_cv_image"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five_dp"
                android:src="@drawable/baby_girl"
                app:civ_circle_background_color="@color/colorYellowBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty_dp"
                android:layout_gravity="bottom"
                android:text="@string/child"
                android:textAlignment="center"
                android:textColor="@color/mostlyTextColor"
                android:textSize="@dimen/sixteen_sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/teenager_cv"
            android:layout_width="@dimen/one_hundred_dp"
            android:layout_height="@dimen/one_hundred_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            app:cardBackgroundColor="@color/colorTransparent"
            app:cardElevation="0dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/teenager_cv_image"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five_dp"
                android:src="@drawable/teen_girl"
                app:civ_circle_background_color="@color/colorGreenBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty_dp"
                android:layout_gravity="bottom"
                android:text="@string/teenager"
                android:textAlignment="center"
                android:textColor="@color/mostlyTextColor"
                android:textSize="@dimen/sixteen_sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adult_cv"
            android:layout_width="@dimen/one_hundred_dp"
            android:layout_height="@dimen/one_hundred_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            app:cardBackgroundColor="@color/colorTransparent"
            app:cardElevation="0dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/adult_cv_image"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five_dp"
                android:src="@drawable/adult_woman"
                app:civ_circle_background_color="@color/colorBlueBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty_dp"
                android:layout_gravity="bottom"
                android:text="@string/adult"
                android:textAlignment="center"
                android:textColor="@color/mostlyTextColor"
                android:textSize="@dimen/sixteen_sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/elderly_cv"
            android:layout_width="@dimen/one_hundred_dp"
            android:layout_height="@dimen/one_hundred_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            app:cardBackgroundColor="@color/colorTransparent"
            app:cardElevation="0dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:id="@+id/elderly_cv_image"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five_dp"
                android:src="@drawable/grandmother"
                app:civ_circle_background_color="@color/colorPurpleBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty_dp"
                android:layout_gravity="bottom"
                android:text="@string/elderly"
                android:textAlignment="center"
                android:textColor="@color/mostlyTextColor"
                android:textSize="@dimen/sixteen_sp" />

        </android.support.v7.widget.CardView>


    </GridLayout>


</RelativeLayout>
